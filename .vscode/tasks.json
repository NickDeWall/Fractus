{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Fractus",
            "type": "shell",
            "command": "g++.exe",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}\\build\\debug\\Fractus.exe",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\screen.cpp",
                "${workspaceFolder}\\src\\screen_manager.cpp",
                "${workspaceFolder}\\src\\fractal_manager.cpp",
                "${workspaceFolder}\\src\\shader_manager.cpp",
                "${workspaceFolder}\\src\\math_utils.cpp",
                "-I${workspaceFolder}\\header",
                "-IC:\\msys64\\mingw64\\include",
                "-LC:\\msys64\\mingw64\\lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lglew32",
                "-lopengl32",
                "-mwindows"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Analyze Dependencies",
            "type": "shell",
            "command": "C:\\msys64\\usr\\bin\\ldd.exe ${workspaceFolder}\\build\\debug\\Fractus.exe > ${workspaceFolder}\\scripts\\dependencies.txt",
            "problemMatcher": []
        },
        {
            "label": "Package Release",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "${workspaceFolder}\\scripts\\package_release.bat"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build and Package (Release)",
            "dependsOn": [
                "Build Fractal Visualizer (Release)",
                "Analyze Dependencies",
                "Package Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}